@model HMS.Areas.Dashboard.ViewModels.AccomodationPackagesListingModel

@{
    ViewBag.Title = "Index";
}



<div class="row">
    <div class="col col-lg-12">
        <h2>AccomodationPackage Type</h2>
        <hr />
    </div>
</div>


<div class="row mb-3">
    <div class="col col-lg-12">

        <form>
            <div class="input-group">
                <input type="text" name="searchterm" class="form-control" placeholder="Search" value="@Model.SearchTerm" required="">
                <div class="input-group-append" id="button-addon4">
                    <button class="btn btn-outline-primary" type="submit"> <i class="fas fa-search mr-1"></i>Search</button>
                    <a class="btn btn-outline-secondary" href="@Url.Action("Index", "AccomodationPackages")" type="button"> <i class="fas fa-undo mr-1"></i>Reset </a> 
                    <button data-href="@Url.Action("Action", "AccomodationPackages")" class="data-btn btn btn-outline-secondary" type="button" data-toggle="modal" data-target="#actionModal"><i class="fas fa-plus-circle mr-1"></i> Create</button>
                </div>
            </div>
        </form>

    </div>
</div>



<div class="row">
    <div class="col col-lg-12">
        @{
            Html.RenderPartial("_Listing",Model);
        }
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="actionModal">
    <div class="modal-dialog">

    </div>
</div>

<script>

    $(".data-btn").click(function () {
        $.ajax({
                url: $(this).attr("data-href"),
            })
            .done(function (response) {
                $("#actionModal .modal-dialog").html(response);
            });
    });

</script>